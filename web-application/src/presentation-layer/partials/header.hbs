<div class="header">
    
    <!--Navbar -->
    <div class="col-12">
        <nav class="navbar navbar-expand-lg navbar-light bg-light ">
            <div class="container-fluid">

                <div class="ms-2" data-bs-toggle="offcanvas" data-bs-target="#offcanvasLeft"
                    aria-controls="offcanvasLeft">
                    <i class="bi bi-list"></i>
                </div>

                <a href="/"><img class="logo" src="/images/logo.png"></a>

                {{#if session.isLoggedIn}}
                <div id="accountMenu" class="me-4" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight"
                    aria-controls="offcanvasRight">
                    <i class="bi bi-person-check"></i>
                </div>

                {{else}}
                <div id="accountMenu" class="me-4" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight"
                    aria-controls="offcanvasRight">
                    <i class="bi bi-person"></i>
                </div>
                {{/if}}

            </div>
        </nav>
    </div>

    <!--Offcanvas menu -->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasLeft" aria-labelledby="offcanvasLeftLabel">

        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasLeftLabel">Menu</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>

        <div class="offcanvas-body">
            <div>
                <ul class="list-group list-group-flush my-2">
                    <li class="list-group-item"><a class="nav-link link-dark" href="/">Start</a></li>
                    <li class="list-group-item"><a class="nav-link link-dark" href="/ads">Ads</a></li>
                    <li class="list-group-item"><a class="nav-link link-dark" href="/about">About</a></li>
                    <li class="list-group-item"><a class="nav-link link-dark" href="/contact">Contact</a></li>
                </ul>
            </div>
        </div>

    </div>


    <!-- "Account Menu" when logged in -->
    {{#if session.isLoggedIn}}

    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">

        <div class="offcanvas-header">
            <h5 id="offcanvasRightLabel">Account Menu</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>

        <div class="offcanvas-body text-start">

            <div class="row align-items-center">
                <div class="col-6 text-start align-self-end">
                    <h5>Welcome!</h5>
                </div>

                <div class="col-6 text-end">
                    <form action="/accounts/sign-out" method="POST">
                        <input class="btn btn-outline-dark" type="submit" value="sign out">
                    </form>
                </div>
            </div>

            <ul class="list-group list-group-flush my-4">
                <li class="list-group-item"><a class="nav-link link-dark" href="/ads/myAds">My Ads</a></li>
                <li class="list-group-item"><a class="nav-link link-dark" href="/bids/myBids">My Bids</a></li>
                <li class="list-group-item"><a class="nav-link link-dark" href="/user/personalData">Personal Data</a></li>
            </ul>

        </div>

    </div>


    <!-- Account Menu when not logged in -->
    {{else}}
    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">

        <div class="offcanvas-header">
            <p id="offcanvasRightLabel">Sign In</p>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>

        <div class="offcanvas-body text-start">
            <ul class="list-group list-group-flush">

                <li class="list-group-item">
                    <div class="col">
                        <form action="/accounts/sign-in" method="POST">
                            <input type="hidden" name="_csrf" value="{{csrfToken}}">

                            <div class="mb-0">
                                <label class="form-label"></label>
                                <input class="form-control" type="text" name="username" placeholder="username*">
                            </div>

                            <div class="mb-0">
                                <label class="form-label"></label>
                                <input class="form-control" type="password" name="password" placeholder="password*">
                            </div>

                            <div class="d-grid gap-2 mt-3 mb-5">
                                <button class="btn btn-outline-dark" type="submit" value="Sign in" class="btn btn-light">Sign in</button>
                            </div>

                        </form>
                    </div>
                </li>

                <li class="list-group-item">
                    <div class="d-grid gap-2 mt-5">
                        <a class="btn btn-outline-dark btn-lg" role="button" aria-disabled="true"
                            href="/accounts/create">Create an account</a>
                        <p>I'd like to be a plant ye</p>
                    </div>
                </li>

            </ul>
        </div>

    </div>
    {{/if}}

</div>