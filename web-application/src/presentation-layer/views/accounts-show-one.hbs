<div class="content">
<h1>Account</h1>
{{#if errors.length}}
	<p>Oh no, something went wrong:</p>
	<ul>
		{{#each errors}}
			<li>{{this}}</li>
		{{/each}}
	</ul>
{{else}}
	
	{{#if account}}
		<dl>
			
			<dt>Id:</dt>
			<dd>{{account.userAccountID}}</dd>
			
			<dt>Username:</dt>
			<dd>{{account.username}}</dd>

			<dt>Password:</dt>
			<dd>{{account.passwordHash}}</dd>

			<dt>UserAccountID:</dt>
			<dd>{{user.userAcccountID}}</dd>

			<dt>Firstname:</dt>
			<dd>{{user.firstName}}</dd>

			<dt>Lastname:</dt>
			<dd>{{user.lastName}}</dd>

			<dt>email:</dt>
			<dd>{{user.email}}</dd>

			<dt>Phonenumber:</dt>
			<dd>{{user.phoneNumber}}</dd>

			<dt>City:</dt>
			<dd>{{user.city}}</dd>

			<dt>UserID:</dt>
			<dd>{{ad.userID}}</dd>

			<dt>Title:</dt>
			<dd>{{ad.title}}</dd>

			<dt>LatinName:</dt>
			<dd>{{ad.latinName}}</dd>

			<dt>description:</dt>
			<dd>{{ad.description}}</dd>

			<dt>isClosed:</dt>
			<dd>{{ad.isClosed}}</dd>

			<dt>adID:</dt>
			<dd>{{imageBundle.adID}}</dd>

			<dt>CoverImagePath:</dt>
			<dd>{{imageBundle.coverImagePath}}</dd>
			
			<dt>FirstImagePath:</dt>
			<dd>{{imageBundle.firstImagePath}}</dd>

			<dt>SecondImagePath:</dt>
			<dd>{{imageBundle.secondImagePath}}</dd>

			<dt>BidUserID:</dt>
			<dd>{{bid.userID}}</dd>

			<dt>BidAdID:</dt>
			<dd>{{bid.adID}}</dd>

			<dt>BidDate:</dt>
			<dd>{{bid.date}}</dd>

			<dt>BidImagePath:</dt>
			<dd>{{bid.imagePath}}</dd>

			<dt>BidMessage:</dt>
			<dd>{{bid.message}}</dd>

		

			
		</dl>
	{{else}}
		<p>No, that account doesn't exist.</p>
	{{/if}}
	
{{/if}}
</div>