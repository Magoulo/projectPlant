{{#if errors.length}}
	<p>Oh no, something went wrong:</p>
	<ul>
		{{#each errors}}
			<li>{{this}}</li>
		{{/each}}
	</ul>
{{else}}
	
	{{#if User}}

	<h2>My data</h2>
    
        <div class="float-left">
            <form action="/personalData/{{User.userID}}/update" method="POST">
	        <!--<input type="hidden" name="_csrf" value="{{csrfToken}}"> -->
	        <div >
		        <p> Name:</p> 
		        <input type="text" name="firstname" value="{{User.firstName}}">
	        </div>
	        <div>
	            <p>Lasttname:</p> 
	            <textarea name="lastname">{{User.lastName}}</textarea>
	        </div>
	        <div>
	            <p>Email:</p>
	            <textarea name="email">{{User.email}}</textarea>
            </div>
            <div>
	            <p>PhoneNumber:</p>
	            <textarea name="email">{{User.phoneNumber}}</textarea>
            </div>
            <div>
	            <p>City:</p>
	            <textarea name="email">{{User.city}}</textarea>
            </div>

            <div>
		        <input type="submit" value="Update">
	        </div>
            </form>
        </div>

	{{else}}
		<p>No, that user doesn't exist here.</p>
	{{/if}}
	
{{/if}}
</div>