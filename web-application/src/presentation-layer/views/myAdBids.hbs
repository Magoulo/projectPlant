        <h2>Bid</h2>
		  <p>------------------------------------------------------------------------------------------------</p>
    
        <ul>

			<dt>BidDate:</dt>
			<dd>{{date}}</dd>

			<dt>BidImagePath:</dt>
			<dd>{{imagePath}}</dd>

			<dt>BidMessage:</dt>
			<dd>{{message}}</dd>

			<dt>BidStatus:</dt>
			<dd>{{status}}</dd>

			<dt>User Firstnmame:</dt>
			<dd>{{firstName}}</dd>

			<dt>User Lastnmame:</dt>
			<dd>{{lastName}}</dd>

			<dt>User Email:</dt>
			<dd>{{email}}</dd>
        </ul>
          <p>----------------------------------------------------------------------------------------------</p>
      
	{{/each}}
	{{else}}
		<p>No, that ad doesn't exist here.</p>
	{{/if}}
	
{{/if}}
</div>