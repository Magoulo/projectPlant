<div class="content">
<h1>Bid on Ad</h1>

{{#if errors.length}}
	<p>Oh no, something went wrong:</p>
	<ul>
		{{#each errors}}
			<li>{{this}}</li>
		{{/each}}
	</ul>
{{else}}
	
	{{#if ad}}
        <ul>		
			<dt>Title:</dt>
			<dd>{{ad.title}}</dd>

            <dt>UserID:</dt>
			<dd>{{ad.userID}}</dd>

			<dt>LatinName:</dt>
			<dd>{{ad.latinName}}</dd>

			<dt>description:</dt>
			<dd>{{ad.description}}</dd>

			<dt>isClosed:</dt>
           
			<dd>{{ad.isClosed}}</dd>
        </ul>
         <!-- --------Bidtable rows------->

    {{#each bids}}
        <ul>
	   	    <dt>BidUserID:</dt>
			<dd>{{userID}}</dd>

			<dt>BidAdID:</dt>
			<dd>{{adID}}</dd>

			<dt>BidDate:</dt>
			<dd>{{date}}</dd>

			<dt>BidImagePath:</dt>
			<dd>{{imagePath}}</dd>

			<dt>BidMessage:</dt>
			<dd>{{message}}</dd>
        </ul>
      	{{/each}}
		
	{{else}}
		<p>No, that ad doesn't exist here.</p>
	{{/if}}
	
{{/if}}
</div>