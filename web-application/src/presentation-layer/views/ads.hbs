<div class="container p-0 m-0" style="max-width: 100%;">

	<!-- Manipulate ads shown -->
	<div class="row justify-content-center m-5">
		<div class="col-auto"></div>
		<div class="col-7">
			<div class="row justify-content-center">
				<div class="col-9">
					<form class="w-100" action="/ads/search" method="POST">
						<input style="background-image: ;" type="text" class="form-control" placeholder="search ads"
							aria-describedby="basic-addon1" name="searchInput">
					</form>
				</div>
			</div>
		</div>
		<div class="col-auto"></div>
	</div>


	<!-- All ads -->
	{{#if errors.length}}
	<p>Oh no, something went wrong:</p>
	<ul>
		{{#each errors}}
		<li>{{this}}</li>
		{{/each}}
	</ul>

	{{else}}
	{{#if Ad.length}}

	<div class="row align-items-center">
		{{#each Ad}}

		<div id="ad-clickable" class="col-3 text-center my-4">
			<p></p>
			<h3><a class="link-dark" href="/ads/{{id}}">{{title}}</a></h3>

			<a href="/ads/{{id}}">
				<img class="img-thumbnail" src="/images/{{ImageBundle.coverImagePath}}"
					alt="{{ImageBundle.coverImagePath}}" class="flowerImage">
			</a>

			<p></p>
		</div>

		{{/each}}
	</div>


	{{else}}
	<div class="col-12 text-center">
		<p>No ads available.</p>
	</div>
	{{/if}}
	{{/if}}

</div>