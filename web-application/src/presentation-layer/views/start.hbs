<!-- searchbar -->
<div class="row justify-content-center m-5">
	<div class="col-auto"></div>

	<div class="col-7 mb-3">
		<form class="w-100" action="/ads/search" method="POST">
			<input style="background-image: ;" type="text" class="form-control" placeholder="search ads"
				aria-describedby="basic-addon1" name="searchInput">
		</form>
	</div>

	<div class="col-auto"></div>
</div>


