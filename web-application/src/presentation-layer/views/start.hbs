<div class="container p-0 m-0" style="max-width: 100%;">

	<!-- bakrund -->
	<div class="col-12 text-center">
		<img class="img-fluid" src="https://www.kindpng.com/picc/m/148-1485879_plant-banner-png-transparent-png.png"
			style="width:1700px">
	</div>

	<!-- searchbar -->
	<div class="row justify-content-center m-5">
		<div class="col-auto"></div>

		<div class="col-7 mb-3">
			<form class="w-100" action="/ads/search" method="POST">
				<input style="background-image: ;" type="text" class="form-control" placeholder="search ads"
					aria-describedby="basic-addon1" name="searchInput">
			</form>
		</div>

		<div class="col-auto"></div>
	</div>


	<!-- featured ads, lägg till olika  -->
	{{#if errors.length}}
	<p>Oh no, something went wrong:</p>
	<ul>
		{{#each errors}}
		<li>{{this}}</li>
		{{/each}}
	</ul>

	{{else}}
	{{#if Ad.length}}

	<div class="row justify-content-between align-items-center">
		{{#each Ad}}

		<div class="col-3 text-center">


			<h3><a href="/ads/{{adID}}">{{title}}</a></h3>


			<a href="/ads/{{adID}}">
				<img class="img-thumbnail" src="{{coverImagePath}}" alt="{{imageBundleID}}" class="flowerImage">
			</a>

		</div>

		{{/each}}
	</div>


	{{else}}
	<div class="col-12 text-center">
		<p>No, that account doesn't exist.</p>
	</div>
	{{/if}}
	{{/if}}



</div>