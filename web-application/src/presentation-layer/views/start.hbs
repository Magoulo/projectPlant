{{#if errors.length}}
<p>Oh no, something went wrong:</p>
<ul>
	{{#each errors}}
	<li>{{this}}</li>
	{{/each}}
</ul>

{{else}}
{{#if Ad.length}}

<div class="row align-items-center">
	{{#each Ad}}

	<div id="ad-clickable" class="col-3 text-center my-4">
		<p></p>

		<h3><a class="link-dark" href="/ads/{{id}}">{{title}}</a></h3>

		<a href="/ads/{{id}}">
			<img class="img-thumbnail" src="/images/{{ImageBundle.coverImagePath}}">
		</a>

		<p></p>
	</div>

	{{/each}}
</div>

{{else}}
<div class="col-12 text-center">
	<p>No, that account doesn't exist.</p>
</div>
{{/if}}
{{/if}}